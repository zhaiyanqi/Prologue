<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.HeroMakerActivity"
    tools:ignore="PrivateResource"
    tools:showIn="@layout/activity_hero_maker">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/hero_maker_main_card"
            android:layout_width="250dp"
            android:layout_height="351dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/hero_maker_hero_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty" />

                <ImageView
                    android:id="@+id/hero_maker_base_board"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty" />

                <ImageView
                    android:id="@+id/hero_maker_frame"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/hero_maker_hero_out_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/hero_maker_group"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty" />

                <ImageView
                    android:id="@+id/hero_maker_right_cloud"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/empty" />

                <TextView
                    android:id="@+id/hero_maker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="75dp"
                    android:ems="1"
                    android:maxLength="5"
                    android:onClick="chooseCurrentView"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <cn.zhaiyanqi.prologue.view.StrokeTextView
                    android:id="@+id/hero_maker_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="150dp"
                    android:elevation="8dp"
                    android:ems="1"
                    android:lineSpacingExtra="8dp"
                    android:maxLength="4"
                    android:onClick="chooseCurrentView"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp"
                    app:innerColor="#ffffff"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:outerColor="#000000" />

                <ImageView
                    android:id="@+id/hero_maker_skill_board"
                    android:layout_width="175dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginBottom="25dp"
                    android:contentDescription="@string/empty"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!--skill1-->
                <ImageView
                    android:id="@+id/hero_maker_skill_1_bar"
                    android:layout_width="40dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/empty"
                    android:onClick="chooseCurrentView"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_1_text" />

                <TextView
                    android:id="@+id/hero_maker_skill_1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/hero_maker_skill_1_bar"
                    app:layout_constraintEnd_toEndOf="@+id/hero_maker_skill_1_bar"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/hero_maker_skill_1_bar"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_1_bar"
                    app:layout_constraintVertical_bias="0.42" />

                <TextView
                    android:id="@+id/hero_maker_skill_1_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="10dp"
                    android:onClick="chooseCurrentView"
                    android:textColor="@color/colorBlack"
                    android:textSize="9sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/hero_maker_skill_board"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_board"
                    tools:ignore="SmallSp" />

                <!--skill2-->
                <ImageView
                    android:id="@+id/hero_maker_skill_2_bar"
                    android:layout_width="40dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/empty"
                    android:onClick="chooseCurrentView"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_2_text" />

                <TextView
                    android:id="@+id/hero_maker_skill_2_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/hero_maker_skill_2_bar"
                    app:layout_constraintEnd_toEndOf="@+id/hero_maker_skill_2_bar"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/hero_maker_skill_2_bar"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_2_bar"
                    app:layout_constraintVertical_bias="0.42" />

                <TextView
                    android:id="@+id/hero_maker_skill_2_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"
                    android:onClick="chooseCurrentView"
                    android:textColor="@color/colorBlack"
                    android:textSize="9sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/hero_maker_skill_board"
                    app:layout_constraintTop_toBottomOf="@+id/hero_maker_skill_1_text"
                    tools:ignore="SmallSp" />

                <!--skill3-->
                <ImageView
                    android:id="@+id/hero_maker_skill_3_bar"
                    android:layout_width="40dp"
                    android:layout_height="19dp"
                    android:layout_marginStart="20dp"
                    android:contentDescription="@string/empty"
                    android:onClick="chooseCurrentView"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_3_text" />

                <TextView
                    android:id="@+id/hero_maker_skill_3_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/hero_maker_skill_3_bar"
                    app:layout_constraintEnd_toEndOf="@+id/hero_maker_skill_3_bar"
                    app:layout_constraintHorizontal_bias="0.45"
                    app:layout_constraintStart_toStartOf="@+id/hero_maker_skill_3_bar"
                    app:layout_constraintTop_toTopOf="@+id/hero_maker_skill_3_bar"
                    app:layout_constraintVertical_bias="0.42" />

                <TextView
                    android:id="@+id/hero_maker_skill_3_text"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="2dp"
                    android:onClick="chooseCurrentView"
                    android:textColor="@color/colorBlack"
                    android:textSize="9sp"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="@+id/hero_maker_skill_board"
                    app:layout_constraintTop_toBottomOf="@+id/hero_maker_skill_2_text"
                    tools:ignore="SmallSp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/hero_maker_main_card">

            <LinearLayout
                android:id="@+id/menu_bar_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_bar_basic_info_arrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/base_info"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_basic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_group_with_dot" />

                    <RadioGroup
                        android:id="@+id/hero_maker_group_radio_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/hero_maker_radio_btn_wei"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="loadWei"
                            android:text="@string/hero_group_wei" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="loadShu"
                            android:text="@string/hero_group_shu" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="loadWu"
                            android:text="@string/hero_group_wu" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="loadQun"
                            android:text="@string/hero_group_qun" />

                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:onClick="loadGod"
                            android:text="@string/hero_group_god" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/hero_maker_btn_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_title" />

                    <Button
                        android:id="@+id/hero_maker_btn_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_name" />

                    <Button
                        android:id="@+id/hero_maker_add_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_skill" />

                    <Button
                        android:id="@+id/hero_maker_import_pic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/import_pic" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hero_maker_skills_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skill" />

                    <LinearLayout
                        android:id="@+id/hero_maker_skills"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/edit_skill_button_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="editSkill1Button"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/edit_skill_button_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="editSkill2Button"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/edit_skill_button_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="editSkill3Button"
                            android:visibility="gone" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/hero_maker_remove_skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="removeSkillButton"
                        android:text="@string/remove_skill" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/menu_bar_adjust_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_bar_adjust_position_arrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/adjust_position"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_adjust_position"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/arrow_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/up_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_up"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/left_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_left"
                        app:layout_constraintEnd_toStartOf="@+id/up_arrow"
                        app:layout_constraintTop_toBottomOf="@+id/up_arrow" />

                    <ImageView
                        android:id="@+id/right_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_right"
                        app:layout_constraintStart_toEndOf="@+id/up_arrow"
                        app:layout_constraintTop_toBottomOf="@+id/up_arrow" />

                    <ImageView
                        android:id="@+id/down_arrow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_arrow_downward"
                        app:layout_constraintStart_toEndOf="@+id/left_arrow"
                        app:layout_constraintTop_toBottomOf="@+id/left_arrow" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_step_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:text="@string/step_len"
                    app:layout_constraintStart_toEndOf="@id/arrow_layout"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/edit_text_step_length"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/tv_step_length"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioGroup
                    android:id="@+id/rg_move_position_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/edit_text_step_length"
                    app:layout_constraintTop_toTopOf="parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbTitleClicked"
                        android:text="@string/hero_title" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbNameClicked"
                        android:text="@string/hero_name" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_move_position_skill_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/arrow_layout"
                    app:layout_constraintTop_toBottomOf="@id/rg_move_position_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skill1"
                        app:layout_constraintStart_toEndOf="@id/arrow_layout"
                        app:layout_constraintTop_toBottomOf="@id/rg_move_position_1" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill1BarClicked"
                        android:text="@string/hero_base_board" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill1NameClicked"
                        android:text="@string/skill_name" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill1InfoClicked"
                        android:text="@string/skill_info" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_move_position_skill_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/arrow_layout"
                    app:layout_constraintTop_toBottomOf="@id/rg_move_position_skill_1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skill2"
                        app:layout_constraintStart_toEndOf="@id/arrow_layout"
                        app:layout_constraintTop_toBottomOf="@id/rg_move_position_1" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill2BarClicked"
                        android:text="@string/hero_base_board" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill2NameClicked"
                        android:text="@string/skill_name" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill2InfoClicked"
                        android:text="@string/skill_info" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_move_position_skill_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/arrow_layout"
                    app:layout_constraintTop_toBottomOf="@id/rg_move_position_skill_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skill3"
                        app:layout_constraintStart_toEndOf="@id/arrow_layout"
                        app:layout_constraintTop_toBottomOf="@id/rg_move_position_1" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill3BarClicked"
                        android:text="@string/hero_base_board" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill3NameClicked"
                        android:text="@string/skill_name" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="rbSkill3InfoClicked"
                        android:text="@string/skill_info" />
                </RadioGroup>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/menu_bar_advance_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/menu_bar_advance_option_arrow"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@string/empty"
                    android:src="@drawable/ic_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:text="@string/other_info"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_advance_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skill_board" />

                    <Button
                        android:id="@+id/hero_maker_btn_up_skill_board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="upSkillBoard"
                        android:text="@string/skill_board_up" />

                    <Button
                        android:id="@+id/hero_maker_btn_down_skill_board"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="downSkillBoard"
                        android:text="@string/skill_board_down" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_show_or_hide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/show_or_hide" />

                <View
                    android:id="@+id/view_line"
                    android:layout_width="65dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/colorPrimary"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_show_or_hide" />

                <LinearLayout
                    android:id="@+id/show_hide_checkbox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_hero_base_board"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/hero_base_board" />

                    <CheckBox
                        android:id="@+id/checkbox_hero_frame"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/hero_frame" />

                    <CheckBox
                        android:id="@+id/checkbox_hero_logo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/hero_logo" />

                    <CheckBox
                        android:id="@+id/checkbox_hero_skill"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="@string/hero_skill" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/export_format" />

                <RadioGroup
                    android:id="@+id/hero_maker_rg_select_format"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/hero_maker_rb_format_png"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="setExportFormatPNG"
                        android:text="@string/format_png" />

                    <RadioButton
                        android:id="@+id/hero_maker_rb_format_jpg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="setExportFormatJPG"
                        android:text="@string/format_jpg" />

                    <RadioButton
                        android:id="@+id/hero_maker_rb_format_webp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="setExportFormatWEBP"
                        android:text="@string/format_webp" />
                </RadioGroup>

                <Button
                    android:id="@+id/hero_maker_export_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/export" />
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>